.Chat-box
  .Chat-box__groups-info
    .Chat-box__groups-info__left
      .Chat-box__groups-info__left__title
        = @group.name
      %ul.Chat-box__groups-info__left__members
        Menber :
        - @group.users.each do |user|
          = user.name
        %li.Chat-box__groups-info__left__member
        hiroyuki
   
    = link_to 'Edit' , edit_group_path(@group.id) , class: 'Edit' 
        
  .Chat-box__messages
    = render @messages

  
  .Chat-box__message
    = form_with model: [@group, @message], html: {class: "Chat-box__message__form"}, local: true do |f|
      .Chat-box__message__form__input-box
        = f.text_field :content, class: 'Chat-box__message__form__input-box__text', placeholder: 'type a message'
        = f.label :image, class: 'Chat-box__message__form__input-box__image' do
          = icon('far', 'image')
          = f.file_field :image, class: 'Chat-box__message__form__input-box__image--file'
      = f.submit 'Send', class: 'submit-btn'

  