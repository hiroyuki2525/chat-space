.Side-box
  .Side-box__user-name
    .Side-box__top-items
      %p.Side-box__top-items__name
        = current_user.name
      %ul.Side-box__top-items__icons
        %li.Side-box__top-items__icons--fa
          = link_to new_group_path do
            = icon('far', 'edit')
        %li.Side-box__top-items__icons--edit
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog')
  .Side-box__group-lists
    - current_user.groups.each do |group|
      .Side-box__group-list
        = link_to group_messages_path(group) do
          .Side-box__group-list__group-name
            = group.name
          .Side-box__group-list__group-message
            = group.show_last_message