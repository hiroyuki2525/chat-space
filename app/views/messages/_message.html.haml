
.Chat-box__message-list
  .Chat-box__message-list__upper-message
    .Chat-box__message-list__upper-message__user-name
      = message.user.name
    .Chat-box__message-list__upper-message__date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .Chat-box__messagelist__lower-message
    - if message.content.present?
      %p.Message__content
        = message.content
    = image_tag message.image.url, class: 'Message__image' if message.image.present?
